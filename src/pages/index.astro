---
import Blog from "@components/blog.astro";
import Intro from "@components/intro.astro";
import Technologies from "@components/technologies.astro";
import TextBlock from "@components/text-block.astro";
import PhotoGallery from "@components/photo-gallery/photo-gallery.astro";
import Layout from "../layouts/Layout.astro";
import Vacancies from "@components/vacancies/vacancies.astro";
import Footer from "@components/footer.astro";
import Videos from "@components/videos.astro";
import Scrollup from "@components/scrollup.svelte";
import Teaser from "@components/teaser.astro";
import { getEntryBySlug } from "astro:content";

const homepage = await getEntryBySlug("homepage", "index");
const { teaser, intro, technologies, blog, text_block, vacancies } =
  homepage.data;
---

<Layout title=" OK.TECH — команда, которая создает и развивает ОК" ogTitle="OK.TECH" description="Наша команда регулярно сталкивается с амбициозными и сложными задачами, которые встречаются только в проектах масштаба ОК. На сайте найдете информацию о наших проектах, стек технологий и открытые вакансии.">
  <Teaser {teaser} />
  <Intro {intro} />
  <Technologies {technologies} />
  <Videos />
  <Blog {blog} />
  <TextBlock {text_block} />
  <Vacancies {vacancies} />
  <PhotoGallery />
  <Scrollup client:load />
  <Footer classes="black" />
</Layout>

<script>
  const header = document.querySelector("#page-header") as HTMLElement;
  const logo = document.querySelector("#logo") as HTMLElement;
  const page = document.documentElement;

  const changeLogo = () => {
    const d = page.clientHeight - page.scrollTop - header.offsetHeight / 2;
    logo.classList.toggle("hidden-text", d < 0);
  }

  if (header) {
    changeLogo();
  }
  
  document.addEventListener("scroll", () => {
    if (header) {
      changeLogo();
    }
  });
</script>
