---
import { Image } from "astro:assets";
export interface Props {
  src: ImageMetadata;
  alt: string;
  link?: string;
}
const { alt, src, link } = Astro.props;
---

<a href={link} target="_blank">
  <div class="news-photo">
    <Image {src} {alt} />
  </div>
</a>

<style lang="scss">
  .news-photo {
    border-radius: 24px;
    height: 430px;
    width: 100%;
    overflow: hidden;

    &:hover {
      filter: brightness(0.9);
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
