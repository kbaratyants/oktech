---
import { Image } from 'astro:assets';
export interface Props {
  title: string;
  date: string;
  src: ImageMetadata;
  alt: string;
  link?: string;
}
const { title, date, src, link, alt } = Astro.props;
---
<a href={link}>
  <div class=`news-mix`>
    <Image class="image" {src} {alt}/>
    <div class="text flex flex-col gap-4 p-6">
      <div class="text-title-3">{title}</div>
      <div class="text-headline">{date}</div>
    </div>
  </div>
</a>


<style lang="scss">
  @import "../../styles/global.scss";
  .news-mix {
    display: flex;
    flex-direction: column;
    border-radius: 24px;
    color: black;
    background-color: $c-light-gray;
    
    &:hover {
      background-color: $c-light-gray-hover;
    }
  }
  
  .image {
    object-fit: cover;
    border-radius: 24px 24px 0 0;
  }
  
  .text {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 24px;
  }
</style>