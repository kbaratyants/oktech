---
export interface Props {
  title: string;
  date: string;
  color: string;
  link?: string;
  height?: string;
}
const { title, date, color, height, link } = Astro.props;
---

<a href={link}>
  <div class={`news-text ${color}`} style={`height: ${height}`}>
    <div class=`text`>
      <div class="text-title-3">{title}</div>
      <div class="text-headline">{date}</div>
    </div>
  </div>
</a>

<style lang="scss">
  @import "../../styles/global.scss";
  
  .news-text {
    height: 430px;
    width: 100%;
    display: flex;
    flex-direction: column;
    border-radius: 24px;
    color: black;
    
    &.black {
      color: white;
      background-color: black;
      
      &:hover {
        background-color: $black-hover;
      }
    }
    
    &.gray {
      background-color: $c-gray;
      
      &:hover {
        background-color: $c-gray-hover;
      }
    }
    
    &.accent {
      background-color: $c-accent;
      
      &:hover {
        background-color: $c-accent-hover;
      }
    }
  }

  .text {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding: 24px;
  }
</style>
