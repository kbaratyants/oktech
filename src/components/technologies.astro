---
import img1 from "@assets/techradar-button/1.svg";
import img2 from "@assets/techradar-button/2.svg";
import img3 from "@assets/techradar-button/3.svg";
import Image from "astro/components/Image.astro";

const { technologies } = Astro.props;
const { title, technologies_list, button_text } = technologies;
---

<section class="section-y section-x">
  <h2 class="text-large-title title">{title}</h2>
  <div class="technologies">
    {
      technologies_list.map(({ title, subtitle }) => (
        <div class="technology">
          <div class="text-title-1">{title}</div>
          <div class="content">
            {subtitle.map((tech) => (
              <div class="text-body">
                {tech.title}: {tech.content}
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
  <a class="techradar-button" href="/techradar">
    <button class="main-button text-button">{button_text}</button>
    <Image class="image" src={img1} alt="" />
    <Image class="image" src={img2} alt="" />
    <Image class="image" src={img3} alt="" />
  </a>
</section>

<style lang="scss">
  @import "../styles/global.scss";

  section {
    display: flex;
    flex-direction: column;
    gap: 48px;
    color: black;
  }

  .title {
    width: min-content;
  }

  .technologies {
    display: grid;
    gap: 48px;
  }

  .techradar-button {
    position: relative;
    width: 100%;
  }
  .techradar-button:hover {
    .image {
      opacity: 1;
    }
  }
  .image {
    position: absolute;
    opacity: 0;
    transition: opacity 0.3s;
    animation: float linear 1.5s infinite alternate;

    &:nth-of-type(1) {
      top: 38px;
      right: 28px;
    }

    &:nth-of-type(2) {
      right: 44px;
      bottom: 28px;
      animation-delay: 0.1s;
    }

    &:nth-of-type(3) {
      top: 5px;
      left: 15px;
      animation-delay: 0.2s;
    }
  }
  .technology {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  @include desktop {
    .technologies {
      grid-auto-flow: column;
      grid-template-rows: repeat(2, auto);
    }
    .techradar-button {
      width: fit-content;
    }
  }
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 10px, 0);
    }
  }
</style>
