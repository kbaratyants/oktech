---
export interface Props {
  absolute: boolean;
  color: string;
  bgColor?: string;
}

const date = new Date().getFullYear();

const { absolute, color, bgColor } = Astro.props;
---

<footer
  class={`${
    absolute ? "absolute bottom-0 w-full" : "relative"
  } flex flex-col lg:flex-row lg:justify-between border-t border-${color} text-center items-center justify-center text-${color} bg-${bgColor} text-footer px-4`}
>
  <div>hi@ok.ru</div>

  <div>
    © 2006–{date}, OK.TECH
  </div>
</footer>
